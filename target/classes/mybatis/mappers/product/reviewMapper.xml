  <mapper namespace="reviewMapper">
  
  <sql id="bs">

		<choose>
			<when test="kind == 'kt'">
				where pro_num like '%'||#{search}||'%'
			</when>
			<when test="kind == 'kw'">
				where pro_num like '%'||#{search}||'%'
			</when>
			<otherwise>
				where pro_num like '%'||#{search}||'%'
			</otherwise>
		</choose>
	</sql>


	<!--리뷰테이블 -->
  <select id="revAll" parameterType="Pager" resultType="ReviewVO">
  		select *from (select V.*, rownum R from
		(select * from review
  		 <include refid="bs"/>
  		 order by rev_num desc) V)
  		where R between #{startRow} and #{lastRow}
  
  </select> 

  <!--포로리뷰이미지가져오기  -->
	<select id="photoReview" parameterType="Pager" resultType="RevFilesVO">
		select *from (select F.*, rownum R from
		(select * from revFiles
		order by fnum desc) F)
		where R between #{startRow} and #{lastRow}
	
	</select>
  
  
  
  <!--상품테이블과리뷰테이블합친것  -->
  <select id="reviewList" parameterType="Pager" resultMap="reviewL">
	select C.*, F.fname ,F.fnum, F.oname from
  	(select P.*, rownum R from
  		( select * from
 ( select A.*,B.pro_main ,V.id, V.rev_num, V.star, V.rev_contents,V.name,V.help, V.rev_date from product A, images B, review V
            where A.pro_num=B.pro_num and A.pro_num=V.pro_num)<include refid="bs"/> )P)C full outer join revfiles F on C.rev_num = F.rev_num where R between #{startRow} and #{lastRow}
            order by C.rev_num desc
  
  </select>
  
